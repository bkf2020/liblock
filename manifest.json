{
	"name": "liblock",
	"version": "1",
	"icons": {
		"16": "icons/icon_16.png",
		"32": "icons/icon_32.png",
		"48": "icons/icon_48.png",
		"128": "icons/icon_128.png"
    	},
	"permissions": [
		"declarativeNetRequest",
		"tabs",
		"storage",
		"alarms",
		"notifications"
	],
	"host_permissions": [
		"*://*/*"
	],
	"action": {
		"default_popup": "index.html",
		"default_icon": {
			"16": "icons/icon_16.png",
			"32": "icons/icon_32.png",
			"48": "icons/icon_48.png",
			"128": "icons/icon_128.png"
    		}
	},
	"options_ui": {
		"page": "setrules.html",
		"open_in_tab": true
	},
	"background": {
		"service_worker": "background.js"
	},
	"manifest_version": 3
}
