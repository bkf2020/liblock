{
	"name": "liblock",
	"version": "1",
	"permissions": [
		"declarativeNetRequest",
		"tabs",
		"storage",
		"alarms",
		"notifications"
	],
	"host_permissions": [
		"*://*/*"
	],
	"action": {
		"default_popup": "index.html"
	},
	"options_ui": {
		"page": "setrules.html",
		"open_in_tab": true
	},
	"background": {
		"service_worker": "background.js"
	},
	"manifest_version": 3
}
